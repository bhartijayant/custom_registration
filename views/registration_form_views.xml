<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_registration_form_tree" model="ir.ui.view">
        <field name="name">registration.form.tree</field>
        <field name="model">registration.form</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="occupation"/>
                <field name="gender"/> 
            </tree>
        </field>
    </record>
     
    <record id="view_registration_form_form" model="ir.ui.view">
        <field name="name">registration.form.form</field>
        <field name="model">registration.form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="address"/>
                        <field name="occupation" style="background-color: lightgrey;" options="{'no_create': True}"/>
                        <field name="gender"/> 
                    </group>
                </sheet>
            </form>
        </field>
    </record>
     
    <record id="action_registration_form" model="ir.actions.act_window">
        <field name="name">Registration Forms</field>
        <field name="res_model">registration.form</field>
        <field name="view_mode">tree,form</field>
    </record>
     
    <menuitem id="menu_registration_form_root" name="Registration" sequence="10"/>
    <menuitem id="menu_registration_form" name="Forms" parent="menu_registration_form_root"
              action="action_registration_form" sequence="10"/>
</odoo>