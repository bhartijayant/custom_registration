<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_family_welfare_tree" model="ir.ui.view">
        <field name="name">family.welfare.tree</field>
        <field name="model">family.welfare</field>
        <field name="arch" type="xml">
            <tree>
                <field name="family_name"/>
                <field name="address"/>
                <field name="num_members"/>
                <field name="monthly_income"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_family_welfare_form" model="ir.ui.view">
        <field name="name">family.welfare.form</field>
        <field name="model">family.welfare</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="family_name"/>
                        <field name="address"/>
                    </group>
                    <group>
                        <field name="num_members"/>
                        <field name="monthly_income"/>
                    </group>
                    <group>
                        <field name="additional_notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_family_welfare" model="ir.actions.act_window">
        <field name="name">Family Welfare Records</field>
        <field name="res_model">family.welfare</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_family_welfare_root" name="Family Welfare Program" sequence="10"/>
    <menuitem id="menu_family_welfare" name="Records" parent="menu_family_welfare_root"
              action="action_family_welfare" sequence="10"/>
</odoo>